<% Ship.all.each do |s| %> 
 <div class="boat">
   <%= image_tag s.photo.url(:medium) %>
   <% if @current_user[:id] == s.user_id %> 
	  <%= content_tag :h4, "Part of the #{@user.company} fleet!" %>
   	  <span>__________________</span>
      <%= link_to 'Delete',  {:controller => "ships", :action => 'destroy', :id => s.id}, :confirm => "Are you sure you want to delete this ship?", :method => :delete %> 
      <%= link_to 'Ship Info', {:controller => "ships", :action => 'show', :id => s.id} %>
   <% else %>
		<span class="ship_name"><%= s.ship_name %></span>
		<%=link_to "Follow", followships_path(ship_id: s.id), method: :post, remote: true %>
   <% end %>
</div>
<% end %>



