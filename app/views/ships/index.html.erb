<% Ship.all.each do |s| %>
   	  	<%= s.ship_name %> 
      	<%= s.user_id.company %>
    <% if s.user_id == @user.id %>
      	<%= link_to 'Delete',  {:controller => "ships", :action => 'destroy', :id => s.id}, :confirm => "Are you sure you want to delete this ship?", :method => :delete %> <br>
      	<%= link_to 'Show',  {:controller => "ships", :action => 'show', :id => s.id} %>
   <% end %>
<% end %>
